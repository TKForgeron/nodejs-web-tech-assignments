extends layout

block content
  article
    h1= welcomeMessage
    p= sesionprogress
    p= totalprogress
  h1 check users
  form(action='admin/users', method='Get')
    input(type='submit', value='get users')
  form(action='admin/users/data', method='POST')
    input(
      type='number',
      min='1',
      name='userId',
      placeholder='user ID',
      required=''
    )
    input(type='submit', value='get user\'s stats')
  h1 add topic
  form(action='/topics', method='POST')
    input(type='text', name='name', placeholder='Name', required='')
    input(type='submit', value='add topic')
  form(action='/topics', method='GET')
    input(type='submit', value='get topics')
  h1 add quiz to topicId 1
  form(action='/topics/1/quizzes', method='POST')
    input(type='text', name='title', placeholder='title', required='')
    input(type='submit', value='add quiz')
  form(action='/topics/1/quizzes', method='GET')
    input(type='submit', value='get quizzes')
  h1 add question to quizId 1
  form(action='/topics/1/quizzes/1/questions', method='POST')
    input(type='text', name='title', placeholder='title', required='')
    input(type='text', name='image', placeholder='image path')
    input(type='text', name='question', placeholder='question', required='')
    input(
      type='text',
      name='explanation',
      placeholder='explanation',
      required=''
    )
    input(type='text', name='answer', placeholder='answer', required='')
    input(
      type='text',
      name='otherOptions',
      placeholder='otherOptions: [horse,pferd,paard]'
    )
    input(type='text', name='reference', placeholder='reference')
    input(type='submit', value='add question')
  form(action='/topics/1/quizzes/1/questions', method='GET')
    input(type='submit', value='get questions')
